# ============ Required Configuration ============
API_KEY=your-secure-api-key-here
WECOM_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxx

# ============ Service Configuration ============
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ============ PO Token Service ============
# Development: http://localhost:4416
# Production: http://pot-provider:4416
POT_SERVER_URL=http://pot-provider:4416

# ============ Proxy Configuration ============
# Required for development, leave empty for production (transparent proxy)
HTTP_PROXY=
HTTPS_PROXY=

# ============ Download Configuration ============
DOWNLOAD_CONCURRENCY=1
# Task interval (seconds), actual value is random between MIN-MAX
TASK_INTERVAL_MIN=30
TASK_INTERVAL_MAX=120
# Audio quality
AUDIO_QUALITY=128

# ============ Storage Configuration ============
DATA_DIR=./data
FILE_RETENTION_DAYS=60

# ============ Timezone ============
TZ=Asia/Shanghai

# ============ Optional: Cookie File Path ============
COOKIE_FILE=

# ============ Optional: Dry Run Mode (for testing) ============
DRY_RUN=false
